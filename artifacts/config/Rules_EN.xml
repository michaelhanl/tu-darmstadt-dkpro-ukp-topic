<?xml version="1.0" encoding="UTF-8"?>
<rules>
    <rule id="rule 1" label="Unmarked Subject" level="9">
        <!-- Example: The duke has given my aunt that teapot. -->
        <constituent cat="S">
            <constituent cat="NP" isTheme="true">
                <relax/>
            </constituent>
            <relax/>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 2" label="Existential There" level="8">
        <!-- Example: There were three jovial Welshmen. -->
        <constituent cat="S">
            <constituent cat="NP">
                <constituent cat="EX" isTheme="true">
                    <relax/>
                </constituent>
            </constituent>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 3" label="Unmarked Nominalization" level="4">
        <!-- Example: What the duke gave to my aunt was that teapot. -->
        <constituent cat="S">
            <constituent cat="SBAR" isTheme="true">
                <relax/>
            </constituent>
            <relax/>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <constituent hw="." cat="." tag="." ht=".">
                <relax/>
            </constituent>
        </constituent>
    </rule>
    <rule id="rule 4" label="Marked Adjunct: Adverbial Phrase" level="2">
        <!-- Example: Merrily we roll along. -->
        <constituent cat="S">
            <constituent cat="ADVP" isTheme="true">
                <relax/>
            </constituent>
            <constituent cat="NP">
                <relax/>
            </constituent>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 5" label="Marked Adjunct: PP" level="2">
        <!-- Example: From house to house I went my way. -->
        <constituent cat="S">
            <constituent cat="PP" isTheme="true">
                <relax/>
            </constituent>
            <relax/>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 6" label="Marked: Object as Theme" level="6">
        <!-- Example: The teapot the duke has given my aunt. -->
        <constituent cat="S">
            <constituent cat="NP" isTheme="true">
                <relax/>
            </constituent>
            <constituent cat="NP">
                <relax/>
            </constituent>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 7" label="Exclamative" level="2">
        <!-- Example: How dreadful she sounds. -->
        <constituent cat="S">
            <constituent cat="ADJP" isTheme="true">
                <relax/>
            </constituent>
            <constituent cat="NP">
                <relax/>
            </constituent>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 9" label="Unmarked: WH-Question" level="1">
        <!-- Example: Who wants a glass of wine? -->
        <constituent cat="SBARQ">
            <constituent cat="(WHNP|WHADVP)" isTheme="true">
                <relax/>
            </constituent>
            <relax/>
            </constituent>
    </rule>
    <rule id="rule 10" label="Unmarked: Yes/No Interrogative" level="1">
        <!-- Example: Did you sleep okay? -->
        <constituent cat="SQ">
            <constituent cat="(.*)" isTheme="true">
                <relax/>
            </constituent>
            <relax/>
            </constituent>
    </rule>
    <rule id="rule 11" label="Unmarked Imperative" level="2">
        <!-- Example: Turn it down. -->
        <constituent cat="S">
            <constituent cat="VP">
                <constituent cat="VB" isTheme="true">
                    <relax/>
                </constituent>
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 12" label="Unmarked Thematic Equative" level="4">
        <!-- Example: The one who gave my aunt that teapot was the duke. -->
        <constituent cat="S">
            <constituent cat="NP" isTheme="true">
                <constituent cat="NP">
                    <relax/>
                </constituent>
                <constituent cat="SBAR">
                    <relax/>
                </constituent>
            </constituent>
            <constituent cat="VP">
                <relax/>
            </constituent>
            <relax/>
        </constituent>
    </rule>
    <rule id="rule 13" label="Marked Thematic Equative" level="5">
        <!-- Example: That is the one I like. -->
        <constituent cat="S">
            <constituent cat="NP">
                <constituent cat="DT" isTheme="true">
                    <relax/>
                </constituent>
            </constituent>
            <constituent cat="VP">
                <relax/>
                <constituent cat="SBAR">
                    <relax/>
                </constituent>
                <relax/>
            </constituent>
            <relax/>
            </constituent>
    </rule>
</rules>
